<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>UnityPrimaService</display-name>
	<servlet>
		<servlet-name>ServiceServlet</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<description>This is the description of my J2EE component</description>
		<display-name>This is the display name of my J2EE component</display-name>
		<servlet-name>TestAction</servlet-name>
		<servlet-class>cn.edu.sjtu.dclab.slamke.unityprima.webservice.TestAction</servlet-class>
	</servlet>
	<servlet>
		<description>This is the description of my J2EE component</description>
		<display-name>This is the display name of my J2EE component</display-name>
		<servlet-name>CustomerService</servlet-name>
		<servlet-class>cn.edu.sjtu.dclab.slamke.unityprima.webservice.CustomerService</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>log4jinit</servlet-name>
		<servlet-class>cn.edu.sjtu.dclab.slamke.unityprima.log.Log4jInit</servlet-class>
		<init-param>
			<param-name>log4j-init-file</param-name>
			<param-value>\WEB-INF\log4j.properties</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>log4jinit</servlet-name>
		<url-pattern>/log4jinit</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>ServiceServlet</servlet-name>
		<url-pattern>/service/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TestAction</servlet-name>
		<url-pattern>/service/test</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CustomerService</servlet-name>
		<url-pattern>/service/customer</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>testLogin.jsp</welcome-file>
	</welcome-file-list>
</web-app>
